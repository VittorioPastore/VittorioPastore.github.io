---
// src/pages/memorytest.astro ‚Äî memtest86+ inspired memory card game
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Memtest86+ v7.0 ‚Äî Memory Test</title>
    <meta name="description" content="Memory card matching game ‚Äî memtest86+ style" />
  </head>
  <body>
    <div id="app">
      <!-- Header bar mimicking memtest86+ -->
      <header id="header">
        <div class="header-left">
          <span class="brand">Memtest86+ v7.0</span>
          <span class="sep">|</span>
          <span class="info" id="cpu-info">CPU: Portfolio Edition @ 3.6GHz</span>
        </div>
        <div class="header-right">
          <span id="timer">Time: 00:00</span>
          <span class="sep">|</span>
          <span id="moves">Moves: 0</span>
          <span class="sep">|</span>
          <span id="pairs-found">Pairs: 0/8</span>
        </div>
      </header>

      <!-- Stats bar -->
      <div id="stats-bar">
        <div class="stat">
          <span class="stat-label">Test:</span>
          <span class="stat-val" id="test-name">Concentration [Matching Pairs]</span>
        </div>
        <div class="stat">
          <span class="stat-label">Pass:</span>
          <span class="stat-val" id="pass-count">0</span>
        </div>
        <div class="stat">
          <span class="stat-label">Errors:</span>
          <span class="stat-val" id="error-count">0</span>
        </div>
        <div class="stat progress-stat">
          <span class="stat-label">Progress:</span>
          <div class="progress-bar">
            <div class="progress-fill" id="progress-fill"></div>
          </div>
          <span class="stat-val" id="progress-pct">0%</span>
        </div>
      </div>

      <!-- Difficulty selector -->
      <div id="difficulty-select">
        <span class="diff-label">Grid size:</span>
        <button class="diff-btn active" data-pairs="8" data-cols="4">4√ó4</button>
        <button class="diff-btn" data-pairs="12" data-cols="6">4√ó6</button>
        <button class="diff-btn" data-pairs="18" data-cols="6">6√ó6</button>
      </div>

      <!-- Game grid -->
      <div id="game-grid" class="grid-4"></div>

      <!-- Win screen -->
      <div id="win-screen" style="display:none;">
        <pre id="win-ascii"></pre>
        <p id="win-stats"></p>
        <div class="win-actions">
          <button id="play-again" class="action-btn">[Play Again]</button>
          <a href="/" class="action-btn" id="back-home">[Boot to Portfolio]</a>
        </div>
      </div>

      <!-- Footer -->
      <footer>
        <span>ESC: <a href="/">Exit to Portfolio</a></span>
        <span>|</span>
        <span>R: Restart</span>
      </footer>
    </div>

    <style is:global>
      *, *::before, *::after {
        margin: 0; padding: 0; box-sizing: border-box;
      }
      html {
        background: #000000;
        color: #c0c0c0;
        font-family: 'Courier New', 'Lucida Console', 'Consolas', monospace;
        font-size: 16px;
        line-height: 1.45;
      }
      body {
        min-height: 100vh;
        display: flex;
        justify-content: center;
      }
      #app {
        width: 100%;
        max-width: none;
        padding: 0.5rem 1rem;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      a { color: #5599ff; text-decoration: none; }
      a:hover { color: #fff; text-decoration: underline; }

      /* Header */
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
        background: #111111;
        color: #fff;
        padding: 0.4rem 0.75rem;
        font-weight: bold;
        font-size: 0.95rem;
        border-bottom: 2px solid #333;
      }
      .header-left, .header-right {
        display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;
      }
      .sep { color: #555; }
      .brand { color: #ffcc00; }

      /* Stats bar */
      #stats-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem 1.5rem;
        background: #000;
        border: 1px solid #222;
        padding: 0.4rem 0.75rem;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
      }
      .stat { display: flex; align-items: center; gap: 0.35rem; }
      .stat-label { color: #888; }
      .stat-val { color: #ffcc00; }
      .progress-stat { flex: 1; min-width: 180px; }
      .progress-bar {
        width: 100px;
        height: 10px;
        background: #000;
        border: 1px solid #333;
        overflow: hidden;
      }
      .progress-fill {
        height: 100%;
        width: 0%;
        background: #00cc00;
        transition: width 0.3s;
      }

      /* Difficulty */
      #difficulty-select {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        font-size: 0.85rem;
      }
      .diff-label { color: #888; }
      .diff-btn {
        background: #111;
        color: #c0c0c0;
        border: 1px solid #333;
        padding: 0.25rem 0.65rem;
        font-family: inherit;
        font-size: 0.95rem;
        cursor: pointer;
      }
      .diff-btn:hover { background: #222; color: #fff; }
      .diff-btn.active {
        background: #ffcc00;
        color: #000;
        border-color: #ffcc00;
        font-weight: bold;
      }

      /* Game Grid */
      #game-grid {
        display: grid;
        gap: 6px;
        justify-content: center;
        margin: 0 auto;
        width: 100%;
        flex: 1;
        align-content: start;
        padding: 0.5rem 0;
      }
      .grid-4 { grid-template-columns: repeat(4, 1fr); max-width: 520px; width: 100%; }
      .grid-6 { grid-template-columns: repeat(6, 1fr); max-width: 780px; width: 100%; }

      /* Cards */
      .card {
        aspect-ratio: 1;
        border: 1px solid #333;
        background: #111;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: clamp(1.6rem, 5vw, 2.6rem);
        user-select: none;
        -webkit-tap-highlight-color: transparent;
        transition: background 0.15s, border-color 0.15s;
        position: relative;
      }
      .card::before {
        content: '?';
        color: #444;
        font-size: clamp(1.4rem, 4vw, 2rem);
        font-weight: bold;
      }
      .card.flipped, .card.matched {
        background: #1a1a1a;
        border-color: #00cc00;
      }
      .card.flipped::before, .card.matched::before {
        display: none;
      }
      .card .card-face {
        display: none;
      }
      .card.flipped .card-face,
      .card.matched .card-face {
        display: block;
      }
      .card.matched {
        border-color: #00cc00;
        background: #001100;
      }
      .card.matched .card-face {
        opacity: 0.7;
      }
      .card.wrong {
        border-color: #cc3333;
        background: #110000;
      }
      .card:hover:not(.flipped):not(.matched) {
        border-color: #666;
        background: #111;
      }

      /* Win screen */
      #win-screen {
        text-align: center;
        padding: 2rem 1rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      #win-ascii {
        color: #00cc00;
        font-size: clamp(10px, 2vw, 16px);
        line-height: 1.2;
        margin-bottom: 1.5rem;
        text-align: left;
      }
      #win-stats {
        color: #ffcc00;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
      }
      .win-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
      }
      .action-btn {
        color: #5599ff;
        border: 1px solid #003366;
        background: #001833;
        padding: 0.5rem 1.25rem;
        font-family: inherit;
        font-size: 1.05rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
      }
      .action-btn:hover {
        background: #002244;
        color: #fff;
        border-color: #5599ff;
        text-decoration: none;
      }

      /* Footer */
      footer {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        justify-content: center;
        color: #555;
        font-size: 0.9rem;
        padding: 0.75rem 0;
        border-top: 1px solid #222;
        margin-top: auto;
      }
      footer a { color: #888; }

      @media (max-width: 480px) {
        #app { padding: 0.25rem 0.5rem; }
        header { font-size: 0.8rem; padding: 0.3rem 0.5rem; }
        #stats-bar { font-size: 0.85rem; gap: 0.4rem 0.75rem; }
        .progress-bar { width: 60px; }
        .card { font-size: 1.5rem; }
        #game-grid { gap: 4px; }
      }
    </style>

    <script>
      // --- Card symbols ---
      const allSymbols = [
        'üß†','üî¨','ü§ñ','üöÄ','‚ö°','üîß','üíæ','üéØ',
        'üß¨','üì°','üéÆ','üñ•Ô∏è','üîë','üõ∏','üåå','üéµ',
        'üìê','ü¶æ'
      ];

      let totalPairs = 8;
      let gridCols = 4;
      let cards: { symbol: string; id: number }[] = [];
      let flippedCards: HTMLElement[] = [];
      let matchedCount = 0;
      let moveCount = 0;
      let errorCount = 0;
      let passCount = 0;
      let locked = false;
      let timerInterval: ReturnType<typeof setInterval> | null = null;
      let secondsElapsed = 0;
      let gameStarted = false;

      const grid = document.getElementById('game-grid')!;
      const timerEl = document.getElementById('timer')!;
      const movesEl = document.getElementById('moves')!;
      const pairsEl = document.getElementById('pairs-found')!;
      const errorEl = document.getElementById('error-count')!;
      const passEl = document.getElementById('pass-count')!;
      const progressFill = document.getElementById('progress-fill')!;
      const progressPct = document.getElementById('progress-pct')!;
      const winScreen = document.getElementById('win-screen')!;
      const winAscii = document.getElementById('win-ascii')!;
      const winStats = document.getElementById('win-stats')!;

      // Difficulty buttons
      document.querySelectorAll('.diff-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.diff-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          totalPairs = parseInt(btn.getAttribute('data-pairs')!);
          gridCols = parseInt(btn.getAttribute('data-cols')!);
          initGame();
        });
      });

      document.getElementById('play-again')!.addEventListener('click', () => initGame());

      // Keyboard shortcuts
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          sessionStorage.removeItem('hasBooted');
          window.location.href = '/';
        }
        if (e.key === 'r' || e.key === 'R') {
          initGame();
        }
      });

      // Clear boot flag when going home
      document.getElementById('back-home')?.addEventListener('click', () => {
        sessionStorage.removeItem('hasBooted');
      });

      function shuffle<T>(arr: T[]): T[] {
        const a = [...arr];
        for (let i = a.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [a[i], a[j]] = [a[j], a[i]];
        }
        return a;
      }

      function initGame() {
        // Reset state
        if (timerInterval) clearInterval(timerInterval);
        timerInterval = null;
        secondsElapsed = 0;
        moveCount = 0;
        matchedCount = 0;
        errorCount = 0;
        flippedCards = [];
        locked = false;
        gameStarted = false;

        updateUI();
        timerEl.textContent = 'Time: 00:00';

        // Pick random symbols
        const symbols = shuffle(allSymbols).slice(0, totalPairs);
        cards = shuffle([...symbols, ...symbols].map((s, i) => ({ symbol: s, id: i })));

        // Update grid class
        grid.className = gridCols <= 4 ? 'grid-4' : 'grid-6';
        grid.innerHTML = '';
        winScreen.style.display = 'none';
        grid.style.display = 'grid';

        cards.forEach((card, idx) => {
          const el = document.createElement('div');
          el.className = 'card';
          el.dataset.idx = String(idx);
          el.dataset.symbol = card.symbol;

          const face = document.createElement('span');
          face.className = 'card-face';
          face.textContent = card.symbol;
          el.appendChild(face);

          el.addEventListener('click', () => onCardClick(el));
          grid.appendChild(el);
        });

        // Update pairs display
        pairsEl.textContent = `Pairs: 0/${totalPairs}`;
      }

      function onCardClick(el: HTMLElement) {
        if (locked) return;
        if (el.classList.contains('flipped') || el.classList.contains('matched')) return;

        // Start timer on first click
        if (!gameStarted) {
          gameStarted = true;
          timerInterval = setInterval(() => {
            secondsElapsed++;
            const m = String(Math.floor(secondsElapsed / 60)).padStart(2, '0');
            const s = String(secondsElapsed % 60).padStart(2, '0');
            timerEl.textContent = `Time: ${m}:${s}`;
          }, 1000);
        }

        el.classList.add('flipped');
        flippedCards.push(el);

        if (flippedCards.length === 2) {
          moveCount++;
          locked = true;

          const [a, b] = flippedCards;
          if (a.dataset.symbol === b.dataset.symbol) {
            // Match!
            matchedCount++;
            a.classList.add('matched');
            b.classList.add('matched');
            flippedCards = [];
            locked = false;
            updateUI();

            if (matchedCount === totalPairs) {
              onWin();
            }
          } else {
            // No match
            errorCount++;
            a.classList.add('wrong');
            b.classList.add('wrong');
            updateUI();
            setTimeout(() => {
              a.classList.remove('flipped', 'wrong');
              b.classList.remove('flipped', 'wrong');
              flippedCards = [];
              locked = false;
            }, 700);
          }
        }
      }

      function updateUI() {
        movesEl.textContent = `Moves: ${moveCount}`;
        pairsEl.textContent = `Pairs: ${matchedCount}/${totalPairs}`;
        errorEl.textContent = String(errorCount);
        const pct = totalPairs > 0 ? Math.round((matchedCount / totalPairs) * 100) : 0;
        progressFill.style.width = `${pct}%`;
        progressPct.textContent = `${pct}%`;
      }

      function onWin() {
        if (timerInterval) clearInterval(timerInterval);
        passCount++;
        passEl.textContent = String(passCount);

        const m = String(Math.floor(secondsElapsed / 60)).padStart(2, '0');
        const s = String(secondsElapsed % 60).padStart(2, '0');
        const accuracy = moveCount > 0 ? Math.round((totalPairs / moveCount) * 100) : 100;
        let rating = 'S+';
        if (accuracy < 40) rating = 'C';
        else if (accuracy < 55) rating = 'B';
        else if (accuracy < 70) rating = 'A';
        else if (accuracy < 90) rating = 'S';

        winAscii.textContent =
`‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó
‚ïë                                        ‚ïë
‚ïë         ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà         ‚ïë
‚ïë         ‚ñà  ‚ñà  ‚ñà  ‚ñà  ‚ñà     ‚ñà            ‚ïë
‚ïë         ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà         ‚ïë
‚ïë         ‚ñà     ‚ñà  ‚ñà     ‚ñà     ‚ñà         ‚ïë
‚ïë         ‚ñà     ‚ñà  ‚ñà  ‚ñà‚ñà‚ñà‚ñà  ‚ñà‚ñà‚ñà‚ñà         ‚ïë
‚ïë                                        ‚ïë
‚ïë   M E M O R Y   T E S T   P A S S E D  ‚ïë
‚ïë                                        ‚ïë
‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù`;

        winStats.innerHTML =
          `Time: ${m}:${s} &nbsp;|&nbsp; Moves: ${moveCount} &nbsp;|&nbsp; Errors: ${errorCount} &nbsp;|&nbsp; Accuracy: ${accuracy}% &nbsp;|&nbsp; Rating: <span style="color:#00cc00">${rating}</span>`;

        // Brief delay, then show win screen
        setTimeout(() => {
          grid.style.display = 'none';
          winScreen.style.display = 'flex';
        }, 600);
      }

      // Initialize
      initGame();
    </script>
  </body>
</html>
